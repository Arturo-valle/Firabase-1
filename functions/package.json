{
  "name": "centracapital-functions",
  "description": "Cloud Functions for CentraCapital",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha src/**/*.test.js --reporter spec",
    "test:coverage": "nyc --reporter=html --reporter=text npm test",
    "test:integration": "firebase emulators:exec --only firestore \"npm run test\"",
    "lint": "eslint ."
  },
  "engines": {
    "node": "20"
  },
  "main": "src/index.js",
  "dependencies": {
    "@google-cloud/storage": "^7.18.0",
    "@google-cloud/vision": "^5.3.4",
    "@google/genai": "^1.34.0",
    "axios": "^1.6.8",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.2",
    "google-auth-library": "^10.5.0",
    "pdf-parse": "^1.1.1"
  },
  "private": true,
  "devDependencies": {
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "firebase-functions-test": "^3.4.1",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.0"
  }
}
